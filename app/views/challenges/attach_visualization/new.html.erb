<%= render("shared/turbo_dialog", title: t("challenge.submit_existing_visualization")) do %>
  <div data-action="turbo:submit-end->dialog#submitEnd">
    <%= form_with(url: challenge_attach_visualization_path(locale, @challenge), data: {turbo: false}, class: "my-form") do |form| %>
      <div class="row row-cols-2 row-cols-md-4 g-4">
        <% @visualizations.each do |visualization| %>
          <div class="col">
            <%= form.radio_button(:visualization_id, visualization.id, id: "visualization_#{visualization.id}", class: "btn-check", required: true) %>
            <%= form.label(:visualization_id, for: "visualization_#{visualization.id}", class: "btn btn-outline-success w-100 p-0 position-relative") do %>
              <div class="ratio ratio-1x1">
                <%= image_tag(visualization.image, class: "object-fit-cover rounded-top", alt: visualization.title) %>
              </div>
              <div class="small p-2 rounded-bottom">
                <%= visualization.title %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= render(PaginationComponent.new(pagy: @pagy)) %>

      <div class="mt-3">
        <%= form.submit(t("common.save"), class: "btn btn-primary rounded-pill w-100") %>
      </div>
    <% end %>
  </div>
<% end %>
