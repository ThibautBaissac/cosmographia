<div class="col-md-4">
  <%= link_to(participations_challenge_path(challenge)) do %>
    <div class="card mb-4 rounded-4 border-secondary-subttle hover-card">
      <div class="card-body">
        <h5 class="card-title fw-bold text-primary">
          <% if challenge.upcoming? %>
            <i class="fa-solid fa-hourglass-start text-primary small"></i>
            <% elsif challenge.ongoing? %>
              <i class="fa-solid fa-hourglass-half text-success small"></i>
            <% elsif challenge.ended? %>
              <i class="fa-solid fa-hourglass-end text-warning small"></i>
          <% end %>
          <span class="ms-2"><%= challenge.title %></span>
        </h5>
        <p class="card-text text-muted">
          <%= truncate(challenge.description, length: 100) %>
        </p>

        <hr>

        <div class="d-flex justify-content-between gap-2">
          <div>
            <span class="badge text-bg-primary">
              <%= t("challenge.category.#{challenge.category.downcase}") %>
            </span>
            <span class="badge text-bg-success">
              <%= t("challenge.difficulty.#{challenge.difficulty.downcase}") %>
            </span>
          </div>
          <div class="d-flex align-items-center gap-1">
            <%= challenge.users&.count %><i class="fa-solid fa-users-rectangle"></i>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
