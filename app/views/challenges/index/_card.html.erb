<div class="col-md-4">
  <%= link_to(challenge_path(challenge)) do %>
    <div class="card mb-4 rounded-4 border-secondary-subttle hover-card">
      <div class="card-body">
        <h5 class="card-title fw-bold text-primary">
          <% if challenge.upcoming? %>
            <i class="fa-solid fa-hourglass-start text-primary small"></i>
            <% elsif challenge.ongoing? %>
              <i class="fa-solid fa-hourglass-half text-success small"></i>
            <% elsif challenge.ended? %>
              <i class="fa-solid fa-hourglass-end text-warning small"></i>
          <% end %>
          <span class="ms-2"><%= challenge.title %></span>
        </h5>
        <p class="card-text text-muted"><%= truncate(challenge.description, length: 100) %></p>
        <div class="d-flex flex-column gap-2">
          <span class="badge text-bg-primary align-self-start">
            <%= t("activerecord.attributes.challenge.category") %>: <%= t("challenge.category.#{challenge.category.downcase}") %>
          </span>
          <span class="badge text-bg-success align-self-start">
            <%= t("activerecord.attributes.challenge.difficulty") %>: <%= t("challenge.difficulty.#{challenge.difficulty.downcase}") %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
