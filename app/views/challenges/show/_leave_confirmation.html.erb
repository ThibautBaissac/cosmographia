<div class="modal fade" id="leaveConfirmation" tabindex="-1" aria-labelledby="leaveConfirmationLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-4">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="leaveConfirmationLabel">
          <%= t("challenge.leave_confirmation_title") %>
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= t("challenge.leave_confirmation_text_html", title: challenge.title) %>
      </div>
      <div class="modal-footer">
        <%= render(ButtonComponent.new(text: t("common.close"), color: :secondary, rounded: :pill, data: {bs_dismiss: "modal"})) %>
        <%= button_to(t("challenge.leave"), challenge_user_participation_path(locale, challenge), method: :delete, class: 'btn btn-outline-danger rounded-pill') %>
      </div>
    </div>
  </div>
</div>
