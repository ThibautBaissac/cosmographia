<div class="modal fade" id="leaveConfirmation" tabindex="-1" aria-labelledby="leaveConfirmationLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 mt-5">
        <div class="d-flex justify-content-between align-items-center my-2 p-3 border-bottom">
          <h2 class="modal-title fs-4 me-4" id="leaveConfirmationLabel"><%= t("challenge.leave_confirmation_title") %></h2>
          <%= render(ButtonComponent.new(text: t("common.close"), color: :secondary, outline: :true, rounded: :pill, size: :sm, icon: "fa-solid fa-xmark", data: { bs_dismiss: "modal" })) %>
        </div>
      <div class="modal-body">
        <%= t("challenge.leave_confirmation_text_html", title: challenge.title) %>
      </div>
      <div class="modal-footer">
        <%= button_to(t("challenge.leave"), challenge_user_participation_path(locale, challenge), method: :delete, class: 'btn btn-outline-danger rounded-pill') %>
      </div>
    </div>
  </div>
</div>
