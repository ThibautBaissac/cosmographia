<% if current_user.challenges.include?(challenge) %>
  <div class="d-flex gap-2 mb-3">
    <%= link_to(new_challenge_visualization_path(locale, challenge)) do %>
      <%= render(ButtonComponent.new(text: t("challenge.submit_new_visualization"), icon: "fa-solid fa-circle-plus")) %>
    <% end %>

    <%= link_to(new_challenge_attach_visualization_path(locale, challenge), data: {turbo_frame: :modal, action: "dialog#open"}) do %>
      <%= render(ButtonComponent.new(text: t("challenge.submit_existing_visualization"), color: :secondary, outline: :true, icon: "fa-solid fa-circle-plus")) %>
    <% end %>
  </div>
<% end %>
