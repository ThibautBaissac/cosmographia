<div class="container mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="my-4"><%= t("cartography.title") %></h1>
    <% if user_signed_in? %>
      <%= link_to(new_map_path) do %>
        <i class="fa-solid fa-circle-plus fa-2x text-primary"></i>
      <% end %>
    <% end %>
  </div>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <%= render("maps", maps: @maps) %>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-3">
    <%== pagy_nav(@pagy) if @pagy.pages > 1  %>
  </div>
  <p class="text-center fw-light text-secondary"><%= @maps.length %> elements displayed of <%= @pagy.count %> in total</p>
</div>
