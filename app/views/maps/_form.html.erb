<%= form_with(model: map, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <div class="row">
    <div class="col-3">
      <h3 class="text-primary"><%= t("maps.form.general_info_section") %></h3>
    </div>
    <div class="col-9">
      <div class="row row-cols-1 row-cols-md-2 g-4 mb-3">
        <div class="col">
          <%= form.label(:title, class: "form-label fw-semibold") %>
          <%= form.text_field(:title, required: true, class: "form-control rounded-pill shadow-sm", placeholder: "Enter map title") %>
        </div>
        <div class="col">
          <%= form.label(:creation_date, class: "form-label fw-semibold") %>
          <%= form.date_field(:creation_date, class: "form-control rounded-pill shadow-sm") %>
        </div>
      </div>
      <div class="mb-3">
        <%= form.label(:description, class: "form-label fw-semibold") %>
        <%= form.text_area(:description, class: "form-control rounded-4 shadow-sm", rows: 3, placeholder: "Enter a brief description") %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-3">
      <h3 class="text-primary"><%= t("maps.form.image_section") %></h3>
    </div>
    <div class="col-9">
      <%= form.file_field(:image, class: "form-control rounded-pill shadow-sm") %>
      <% if map.image.attached? %>
        <p class="mt-3 fw-semibold"><%= t("maps.form.current_image") %></p>
        <%= image_tag map.image, class: "img-thumbnail shadow-sm", style: "max-height: 150px;" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-3">
      <h3 class="text-primary"><%= t("maps.form.details_section") %></h3>
    </div>
    <div class="col-9">
      <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
        <div class="col">
          <%= form.label(:scale, class: "form-label fw-semibold") %>
          <%= form.number_field(:scale, class: "form-control rounded-pill shadow-sm", placeholder: t("maps.form.scale_placeholder")) %>
        </div>
        <div class="col">
          <%= form.label(:geographic_coverage, class: "form-label fw-semibold") %>
          <%= form.select(:geographic_coverage,
                Map.geographic_coverage_keys.map { |key| [ t("maps.geographic_coverages.#{key}"), key.to_s.upcase ] },
                {include_blank: t("maps.form.geographic_coverage_placeholder")},
                {class: "form-select rounded-pill shadow-sm"}) %>
        </div>
        <div class="col">
          <%= form.label(:projection, class: "form-label fw-semibold") %>
          <%= form.select(:projection,
                Map.projection_keys.map { |key| [ t("map_projections.#{key}"), key.to_s.upcase ] },
                {include_blank: "Select a projection"},
                {class: "form-select rounded-pill shadow-sm"}) %>
        </div>
      </div>
      <div class="mb-3">
        <%= form.label(:sources, class: "form-label fw-semibold") %>
        <%= form.text_area(:sources, class: "form-control rounded-4 shadow-sm", rows: 3, placeholder: t("maps.form.sources_placeholder")) %>
      </div>
    </div>
  </div>


  <div class="row mt-5">
    <div class="col-3">
      <h3 class="text-primary">Softwares</h3>
    </div>
    <div class="col-9">
      <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
        <%= form.collection_check_boxes(:software_ids, Software.all, :id, :name) do |b| %>
          <div class="form-check">
            <%= b.check_box(class: "form-check-input") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-3"></div>
    <div class="col-9">
      <%= form.submit(t("common.save"), class: "btn btn-primary btn-lg w-100 rounded-pill shadow-sm") %>
    </div>
  </div>
<% end %>
