<div class="container d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
  <h1 class="my-0 display-5 text-primary">My profile</h1>
  <%= link_to(edit_my_path, class: "btn btn-outline-primary btn-lg rounded-4 d-flex align-items-center gap-2") do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <span>Edit</span>
  <% end %>
</div>

<%= render("tabs_nav") %>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <%= render("user_info") %>
  </div>
  <div class="tab-pane fade" id="charts" role="tabpanel" aria-labelledby="charts-tab">
    <%= render("charts") %>
  </div>
  <div class="tab-pane fade" id="maps" role="tabpanel" aria-labelledby="maps-tab">
    <%= render("carousel", maps: @maps) %>
  </div>
  <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">
    <%= render("comments", comments: @comments) if @comments.any? %>
  </div>
</div>
