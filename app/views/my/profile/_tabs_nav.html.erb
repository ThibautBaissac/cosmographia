<div class="container my-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <!-- Profile Tab -->
    <li class="nav-item flex-grow-1 text-center" role="presentation">
      <%= link_to(my_profile_tabs_user_info_path, class: "nav-link w-100 border-start rounded-0 active", data: { turbo_frame: "profile_tab_content", turbo_action: :advance }) do %>
        <i class="fa-solid fa-address-card fa-2x text-primary"></i>
        <div class="fw-bold mt-2 text-secondary"><%= t("my.profile.profile_tab") %></div>
      <% end %>
    </li>
    <!-- Charts Tab -->
    <li class="nav-item flex-grow-1 text-center" role="presentation">
      <%= link_to(my_profile_tabs_charts_path, class: "nav-link w-100 border-start rounded-0", data: { turbo_frame: "profile_tab_content", turbo_action: :advance }) do %>
        <i class="fa-solid fa-chart-pie fa-2x text-primary"></i>
        <div class="fw-bold mt-2 text-secondary"><%= t("my.profile.charts_tab") %></div>
      <% end %>
    </li>
    <!-- Comments Tab -->
    <li class="nav-item flex-grow-1 text-center" role="presentation">
      <%= link_to(my_profile_tabs_comments_path, class: "nav-link w-100 border-start border-end rounded-0", data: { turbo_frame: "profile_tab_content", turbo_action: :advance }) do %>
        <i class="fa-solid fa-comment fa-2x text-primary"></i>
        <div class="fw-bold mt-2 text-secondary"><%= t("my.profile.comments_tab") %></div>
      <% end %>
    </li>
  </ul>
</div>
