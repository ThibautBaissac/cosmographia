      </button>
    </li>
    <!-- Charts Tab -->
    <li class="nav-item flex-grow-1 text-center" role="presentation">
      <button class="nav-link w-100 border-start rounded-0" id="charts-tab" data-bs-toggle="tab" data-bs-target="#charts" type="button" role="tab" aria-controls="charts" aria-selected="true">
