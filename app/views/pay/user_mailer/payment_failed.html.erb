  <table width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width: 600px; margin: 0 auto;">
    <tr>
      <td style="padding: 20px; background-color: #ffffff; border-radius: 8px;">
        <!-- Header Section -->
        <h3 style="color: #d9534f; font-size: 22px; margin-top: 0;">
          Your payment was declined
        </h3>

        <!-- Body Section -->
        <p style="font-size: 16px; line-height: 1.5; margin: 10px 0;">
          We were unable to charge your payment method for your <strong><%= Pay.application_name %></strong> subscription. Please update your billing information.
        </p>

        <!-- Call-to-Action Button -->
        <p style="text-align: center; margin: 20px 0;">
          <a href="<%= root_url %>" style="display: inline-block; padding: 12px 24px; background-color: #d9534f; color: #ffffff; text-decoration: none; font-size: 16px; border-radius: 5px;">
            Update billing information
          </a>
        </p>

        <!-- Additional Information -->
        <p style="font-size: 16px; line-height: 1.5; margin: 10px 0;">
          Let us know if you have any questions.
        </p>

        <!-- Signature -->
        <p style="font-size: 16px; line-height: 1.5; margin: 20px 0 0;">
          â€” The <strong><%= Pay.application_name %></strong> Team
        </p>
      </td>
    </tr>
  </table>
</div>
