<div class="container">
  <%= render(HeaderComponent.new(title: t("auth.sign_up"))) %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center flex-sm-row-reverse">
    <div class="col-md-6 mb-3">
      <!-- Card Wrapper -->
      <div class="card shadow-sm rounded-4 h-100">

        <!-- Card Body -->
        <div class="card-body d-flex flex-column justify-content-between">
          <!-- Error Messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Sign-Up Form -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "needs-validation"}) do |f| %>
            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label(t("auth.email"), class: "form-label fw-bold") %>
              <%= f.email_field(:email, autofocus: true, class: "form-control rounded-pill", placeholder: t("auth.email_placeholder"), required: true) %>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label(t("auth.password"), class: "form-label fw-bold") %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
              <%= f.password_field(:password, class: "form-control rounded-pill", autocomplete: "new-password", placeholder: t("auth.password_placeholder"), required: true) %>
            </div>

            <!-- Password Confirmation Field -->
            <div class="mb-3">
              <%= f.label(t("auth.password_confirmation"), class: "form-label fw-bold") %>
              <%= f.password_field(:password_confirmation, class: "form-control rounded-pill", autocomplete: "new-password", placeholder: t("auth.password_confirmation_placeholder"), required: true) %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= f.submit(t("auth.sign_up"), class: "btn btn-success btn-lg rounded-pill shadow-sm") %>
            </div>
          <% end %>

          <!-- Additional Links -->
          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <%= image_tag("homepage-bg.jpg", class: "img-fluid rounded-4") %>
    </div>
  </div>
</div>
