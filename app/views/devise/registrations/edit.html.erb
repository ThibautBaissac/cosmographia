<div class="container">
  <%= render(HeaderComponent.new(title: t("auth.edit"))) %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card Wrapper -->
      <div class="card shadow-sm rounded-4">

        <!-- Card Body -->
        <div class="card-body">
          <!-- Display Error Messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Edit Form -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "needs-validation", novalidate: true}) do |f| %>
            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label(t("auth.email"), class: "form-label fw-bold") %>
              <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("auth.email")) %>
            </div>

            <!-- Pending Confirmation Notice -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-info" role="alert">
                Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
              </div>
            <% end %>

            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label(t("auth.password"), class: "form-label fw-bold") %>
              <small class="form-text text-muted"><%= t("auth.leave_password_blank") %></small>
              <%= f.password_field(:password, autocomplete: "new-password", class: "form-control", placeholder: t("auth.password")) %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <!-- Password Confirmation Field -->
            <div class="mb-3">
              <%= f.label(t("auth.password_confirmation"), class: "form-label fw-bold") %>
              <%= f.password_field(:password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("auth.new_password_placeholder")) %>
            </div>

            <!-- Current Password Field -->
            <div class="mb-4">
              <%= f.label(t("auth.current_password"), class: "form-label fw-bold") %>
              <small class="form-text text-muted"><%= t("auth.current_password_text") %></small>
              <%= f.password_field(:current_password, autocomplete: "current-password", class: "form-control", placeholder: t("auth.current_password_placeholder")) %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit(t("auth.update"), class: "btn btn-primary btn-lg rounded-pill shadow-sm") %>
            </div>
          <% end %>

          <!-- Back Link -->
          <div class="mt-3">
            <%= link_to t("auth.back"), :back, class: "btn btn-outline-secondary rounded-pill" %>
          </div>
        </div>
      </div>
      <!-- End of Card -->
    </div>
  </div>
</div>
