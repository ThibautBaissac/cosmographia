<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card Wrapper -->
      <div class="card shadow-sm rounded-4">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white rounded-top-4">
          <h3 class="mb-0">Edit <%= resource_name.to_s.humanize %></h3>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <!-- Display Error Messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Edit Form -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "needs-validation", novalidate: true}) do |f| %>
            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label(:email, class: "form-label fw-bold") %>
              <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email") %>
            </div>

            <!-- Pending Confirmation Notice -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-info" role="alert">
                Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
              </div>
            <% end %>

            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label(:password, class: "form-label fw-bold") %>
              <small class="form-text text-muted">(Leave blank if you don't want to change it)</small>
              <%= f.password_field(:password, autocomplete: "new-password", class: "form-control", placeholder: "Enter a new password") %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <!-- Password Confirmation Field -->
            <div class="mb-3">
              <%= f.label(:password_confirmation, class: "form-label fw-bold") %>
              <%= f.password_field(:password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your new password") %>
            </div>

            <!-- Current Password Field -->
            <div class="mb-4">
              <%= f.label(:current_password, class: "form-label fw-bold") %>
              <small class="form-text text-muted">(We need your current password to confirm your changes)</small>
              <%= f.password_field(:current_password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your current password") %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit("Update", class: "btn btn-primary btn-lg rounded-pill shadow-sm") %>
            </div>
          <% end %>

          <!-- Cancel Account Section -->
          <hr class="my-4">
          <h4 class="mt-4 text-danger">Cancel My Account</h4>
          <p>Unhappy? You can cancel your account below.</p>
          <%= button_to "Cancel my account", registration_path(resource_name),
                data: {confirm: "Are you sure you want to cancel your account? This action cannot be undone."},
                method: :delete,
                class: "btn btn-danger rounded-pill shadow-sm" %>

          <!-- Back Link -->
          <div class="mt-3">
            <%= link_to "Back", :back, class: "btn btn-outline-secondary rounded-pill" %>
          </div>
        </div>
      </div>
      <!-- End of Card -->
    </div>
  </div>
</div>
