<div class="container">
  <%= render(HeaderComponent.new(title: "Forgot your password?")) %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card Wrapper -->
      <div class="card shadow-sm rounded-4">

        <!-- Card Body -->
        <div class="card-body">
          <!-- Error Messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Forgot Password Form -->
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "needs-validation", novalidate: true}) do |f| %>
            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label(:email, class: "form-label fw-bold") %>
              <%= f.email_field(:email, class: "form-control rounded-pill", placeholder: "Enter your email to reset password", autofocus: true, autocomplete: "email") %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= f.submit("Send me reset password instructions", class: "btn btn-info btn-lg rounded-pill shadow-sm text-white") %>
            </div>
          <% end %>

          <!-- Back Link -->
          <div class="mt-3 text-center">
            <%= link_to "Back", new_session_path(resource_name), class: "btn btn-link text-info fw-bold" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
