<div style="font-family: Arial, sans-serif; margin: 0; padding: 0; line-height: 1.6; color: #333;">
  <table style="width: 100%; max-width: 600px; margin: 0 auto; border-spacing: 0; border-collapse: collapse;">
    <tr>
      <td style="padding: 20px; background: #f4f4f4; text-align: center; border-radius: 15px;">
        <h1 style="color: #194a7e; margin: 0; font-size: 28px;">
          <%= t("devise_emails.email_changed.change_notification.title") %>
        </h1>
        <p style="font-size: 16px; margin: 10px 0; color: #555;">
          <%= t("devise_emails.email_changed.change_notification.description") %>
        </p>
      </td>
    </tr>
    <tr>
      <td style="padding: 20px;">
        <p style="font-size: 16px; margin: 0 0 10px;">
          <%= t("devise_emails.email_changed.change_notification.greeting_html", email: @email) %>
        </p>

        <% if @resource.try(:unconfirmed_email?) %>
          <p style="font-size: 16px; margin: 0 0 10px;">
            <%= t("devise_emails.email_changed.change_notification.pending_email_change", new_email: @resource.unconfirmed_email) %>
          </p>
        <% else %>
          <p style="font-size: 16px; margin: 0 0 10px;">
            <%= t("devise_emails.email_changed.change_notification.success_email_change", email: @resource.email) %>
          </p>
        <% end %>
      </td>
    </tr>
  </table>
</div>
