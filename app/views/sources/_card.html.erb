<div class="col">
  <div class="card h-100 border-secondary-subtle rounded-4 mb-4">
    <div class="card-body d-flex flex-column">
      <h2 class="h5 card-title fw-bold text-primary"><%= source.name %></h2>
      <p class="card-text text-muted"><%= source.location %></p>
      <p class="card-text"><%= source.description %></p>
      <%= link_to(source.url, target: :_blank, class: "mt-auto") do %>
        <%= render(ButtonComponent.new(text: t("source.visit_website"), color: :primary, outline: :true, extra_classes: "w-100", icon: "fa-solid fa-arrow-up-right-from-square")) %>
      <% end %>
    </div>
  </div>
</div>
