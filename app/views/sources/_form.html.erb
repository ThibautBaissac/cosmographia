<%= form_with(model: source, data: {turbo: false}) do |form| %>
  <div class="col">
    <%= form.label(:name, class: "form-label fw-semibold") %>
    <%= form.text_field(:name,
                        required: true,
                        class: "form-control rounded-pill shadow-sm",
                        placeholder: t("sources.form.name_placeholder")) %>
  </div>

  <div class="col mt-3">
    <%= form.label(:url, class: "form-label fw-semibold") %>
    <%= form.text_field(:url,
                        required: true,
                        class: "form-control rounded-pill shadow-sm",
                        placeholder: t("sources.form.url_placeholder")) %>
  </div>

  <div class="col mt-3">
    <%= form.label(:location, class: "form-label fw-semibold") %>
    <%= form.text_field(:location,
                        required: true,
                        class: "form-control rounded-pill shadow-sm",
                        placeholder: t("sources.form.location_placeholder")) %>
  </div>

    <div class="col mt-3">
    <%= form.label(:description, class: "form-label fw-semibold") %>
    <%= form.text_area(:description,
                       required: true,
                       class: "form-control rounded-4 shadow-sm",
                       rows: 5,
                       placeholder: t("sources.form.description_placeholder")) %>
  </div>

  <div class="mt-3">
    <%= form.submit(t("common.save"), class: "btn btn-primary rounded-pill w-100") %>
  </div>
<% end %>
