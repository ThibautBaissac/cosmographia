<% if current_user != true_user %>
  <div class="bg-danger text-white p-2">
    <div class="container d-flex align-items-center justify-content-between">
      <div class="c">
        You (<%= true_user.fullname %>) are signed in as <b><%= current_user.fullname %> - <%= current_user.email %></b>
      </div>
      <%= button_to("Back to admin", stop_impersonating_admin_users_path(locale), data: {turbo: false}, class: "btn btn-primary rounded-pill") %>
    </div>
  </div>
<% end %>
