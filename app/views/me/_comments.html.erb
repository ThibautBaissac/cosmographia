<div class="bg-white border border-secondary-subtle rounded-4 mt-5 p-4">
<h4>
  <%= t("me.my_last_comments", count: @comments.count) %>
  <span class="small fw-light"><%= t("me.total_comment_count", count: @total_comment_count) %></span>
</h4>
  <% comments.each do |comment| %>
    <div class="bg-light rounded-4 p-3 my-2">
      <span class="fw-light"><%= time_ago_in_words(comment.updated_at) %></span>
      <div class="my-2"><%= comment.content %></div>
      <div class="my-2"><%= link_to("Go to the map", comment.map) %></div>
    </div>
  <% end %>
</div>
