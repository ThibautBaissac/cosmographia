<h5 class="card-title text-primary fw-bold">
  <%= t("activerecord.models.software", count: 2) %>
</h5>
<div class="row mt-3 gy-4">
  <% user.user_softwares.each do |user_software| %>
    <div class="col-6 col-sm-4 col-lg-3">
      <div class="card h-100 border-0">
        <div class="card-body">
          <h6 class="text-secondary fw-semibold text-center">
            <%= user_software.software.name %>
          </h6>
          <div class="progress mt-2" style="height: 8px;">
            <div class="progress-bar bg-success"
                  role="progressbar"
                  style="width: <%= 10 * user_software.level %>%;"
                  aria-valuenow="<%= user_software.level %>"
                  aria-valuemin="0"
                  aria-valuemax="<%= Constants::UserSoftwares::MAX_LEVEL %>">
            </div>
          </div>
          <div class="text-center mt-2">
            <%= render(StaticTagComponent.new(color: :success)) do %>
              <%= t("activerecord.attributes.user_software.level") %> <%= user_software.level %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
