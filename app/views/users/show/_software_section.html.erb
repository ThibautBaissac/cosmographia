<h5 class="card-title text-primary fw-bold">
  <%= t("activerecord.models.software", count: 2) %>
</h5>
<div class="row gy-4">
  <% user.user_softwares.each do |user_software| %>
    <% next unless user_software.expertise.present? %>
    <div class="col-6 col-sm-4 col-lg-3">
      <div class="card h-100 border-secondary-subtle rounded-4">
        <div class="card-body text-center">
          <h6 class="text-secondary fw-semibold">
            <%= user_software.software.name %>
          </h6>
          <div class="text-center mt-3">
            <%= render(StaticTagComponent.new(color: :success)) do %>
              <%= t("softwares.expertises.#{user_software.expertise.downcase}") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
