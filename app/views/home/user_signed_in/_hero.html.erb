<div class="container border-bottom bg-light text-center pb-4">
  <h1 class="display-4 fw-bold text-primary">
    <%= t("common.welcome_to", app_name: "Cosmographia") %>
  </h1>
  <div class="col-lg-8 mx-auto">
    <p class="lead text-secondary mb-4">
      <%= t("home.user_signed_in.visualizations_count", count: Visualization.count) %>
      <br>
      <%= t("home.user_signed_in.explore_and_publish") %>
    </p>
    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
      <% if current_user.guest? %>
        <a tabindex="0" class="btn btn-primary btn-lg px-4 gap-3 rounded-pill shadow-sm" data-bs-placement="bottom" role="button" data-bs-toggle="popover" data-bs-trigger="focus" data-bs-title="<%= t("guest.alert_01_html") %>" data-bs-content="<%= t("guest.alert_02_popover") %>">
          <%= t("home.user_signed_in.post_visualization") %>
        </a>
      <% else %>
        <%= link_to(new_visualization_path(locale)) do %>
          <%= render(ButtonComponent.new(text: t("home.user_signed_in.post_visualization"), size: :lg, rounded: :pill)) %>
        <% end %>
      <% end %>
      <%= link_to(visualizations_path(locale)) do %>
        <%= render(ButtonComponent.new(text: "🌍 #{t("home.user_signed_in.discover_visualizations")}", color: :secondary, outline: :true, size: :lg, rounded: :pill)) %>
      <% end %>
    </div>
  </div>
</div>
