<div>
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-4 text-secondary"><%= t("home.user_signed_in.last_comments") %></h2>
    <%= link_to(root_path(locale), data: { turbo_frame: :last_comments }, class: "btn btn-outline-primary rounded-pill") do %>
      <i class="fa-solid fa-rotate-right"></i>
    <% end %>
  </div>
  <div class="bg-primary bg-gradient rounded-4 p-3">
    <%= turbo_frame_tag("last_comments") do %>
      <% comments.each do |comment| %>
        <%= render("my/profile/comment", comment:, user: comment.user) %>
      <% end %>
    <% end %>
  </div>
</div>
