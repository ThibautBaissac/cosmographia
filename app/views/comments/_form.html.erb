<%= turbo_frame_tag("map_comment_form") do %>
  <%= form_with(model: [map, comment], class: "mb-4") do |form| %>
    <%= form.text_area(:content, class: "form-control d-block w-100 mb-2 rounded-4", rows: 3, placehodler: "Type a comment") %>
    <%= form.submit(class: "btn btn-primary rounded-4") %>
  <% end %>
<% end %>
