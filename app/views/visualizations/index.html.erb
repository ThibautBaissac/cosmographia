<%= render("visualizations/index/header") %>

<div class="container mb-4">
  <%= render("visualizations/index/search", query: @query, visualization_count: @pagy.count) %>

  <div class="container my-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <%= render(partial: "visualizations/index/card", collection: @visualizations, as: :visualization) %>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-3">
    <%== pagy_nav(@pagy) if @pagy.pages > 1  %>
  </div>
</div>
