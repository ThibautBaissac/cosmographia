<div class="container mb-4">
  <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
    <h1 class="my-0 display-5 text-primary"><%= t("visualization.title") %></h1>
    <% if policy(Visualization).new? %>
      <%= link_to(new_visualization_path, class: "btn btn-outline-primary btn rounded-4 d-flex align-items-center gap-2") do %>
        <i class="fa-solid fa-circle-plus"></i>
        <span><%= t("visualizations.form.create_title") %></span>
      <% end %>
    <% end %>
  </div>

  <%= render("visualizations/index/search", query: @query, visualization_count: @pagy.count) %>

  <div class="container my-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <%= render(partial: "visualizations/index/card", collection: @visualizations, as: :visualization) %>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-3">
    <%== pagy_nav(@pagy) if @pagy.pages > 1  %>
  </div>
</div>
