<div class="container mb-4">
  <div class="row" data-controller="expand-image">

    <!-- Image Section -->
    <div data-expand-image-target="imageContainer" class="col-12 col-lg-6 mb-3">
      <% if visualization.image.attached? %>
        <div class="position-relative">
          <%= image_tag(visualization.image_resized, class: "w-100 rounded-4 shadow-sm disable_img", alt: visualization.title) %>
          <button type="button"
                  class="btn btn-light btn-sm rounded-pill shadow-sm position-absolute bottom-0 end-0 m-2 border border-primary d-none d-lg-block"
                  data-action="click->expand-image#toggle"
                  data-expand-image-target="expandButton">
            <i class="fa-solid fa-expand"></i>
          </button>
        </div>
      <% else %>
        <%= image_tag("default.png", class: "w-100 rounded-4 shadow-sm") %>
      <% end %>
    </div>

    <!-- Info Section -->
    <div data-expand-image-target="infoSection" class="col-12 col-lg-6">
      <%= render("visualizations/show/info", visualization: @visualization) %>
    </div>
  </div>
</div>
