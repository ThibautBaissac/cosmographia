<div class="container">
  <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <%= link_to(previous_page_link(visualizations_path), class: "btn btn-outline-primary fs-5 rounded-circle") do %>
          <i class="fa-solid fa-arrow-left"></i>
        <% end %>
        <h1 class="my-0 display-5 text-primary"><%= visualization.title %></h1>
    </div>
    <% if policy(visualization).edit? %>
      <%= link_to(edit_visualization_path(visualization), class: "btn btn-outline-primary btn rounded-4 d-flex align-items-center gap-2") do %>
        <i class="fa-regular fa-pen-to-square"></i>
        <span><%= t("common.edit") %></span>
      <% end %>
    <% end %>
  </div>
</div>
