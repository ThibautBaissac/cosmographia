<div data-masonry-target="item" class="border rounded-4">
  <% if visualization.image.attached? %>
    <div class="image-container rounded-top-4">
      <%= link_to(visualization) do %>
        <%= image_tag(visualization.image, class: "w-100", alt: visualization.title) %>
        <div class="image-overlay text-center">
          <%= visualization.description %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= image_tag("default.png") %>
  <% end %>
  <div class="card-body p-3">
    <%= link_to(visualization, class: "text-decoration-none") do %>
      <h5 class="card-title text-primary"><%= visualization.title %></h5>
    <% end %>
    <h6 class="card-subtitle mb-2 text-muted"><%= t("common.created_by", name: visualization.user.fullname) %></h6>
  </div>
</div>
