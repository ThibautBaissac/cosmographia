<div class="card h-100 rounded-4">
  <% if @visualization.image.attached? %>
    <%= link_to(@visualization, data: {turbo: false}) do %>
      <div class="ratio ratio-1x1 rounded-4">
        <%= image_tag(@visualization.image_thumbnail_lg, class: "card-img-top disable_img", alt: @visualization.title) %>
        <div class="image-overlay text-center">
          <%= @visualization.description %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="ratio ratio-1x1">
      <%= image_tag("default.png") %>
    </div>
  <% end %>
  <div class="card-body p-3">
    <%= link_to(@visualization, data: {turbo: false}) do %>
      <h2 class="h5 card-title text-primary"><%= @visualization.title %></h2>
    <% end %>
    <h3 class="h6 card-subtitle mb-2 text-muted"><%= t("common.created_by") %><%= @visualization.user.fullname %></h3>
  </div>
</div>
